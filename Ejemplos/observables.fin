-- Ejemplo 3: Contratos con observables externos
-- Un contrato donde el monto depende del precio del petróleo

let barrilUSD = scale OIL one USD;

-- Comprar 100 barriles
let compra = scale 100.0 barrilUSD;

-- Vender 50 barriles
let venta = give scale 50.0 barrilUSD;

-- Posición neta
compra and venta
