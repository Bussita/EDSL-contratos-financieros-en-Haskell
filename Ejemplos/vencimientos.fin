-- Ejemplo 6: Vencimientos escalonados
-- Muestra cómo truncate filtra cashflows según la fecha actual.

-- Cuota ya vencida (no genera cashflow)
let cuota1 = truncate 2025-06-01 scale 100.0 one USD;

-- Cuota próxima a vencer (todavía vigente)
let cuota2 = truncate 2026-12-31 scale 200.0 one USD;

-- Cuota a largo plazo
let cuota3 = truncate 2028-01-01 scale 300.0 one USD;

-- Plan de pagos completo: solo se ven las cuotas vigentes
let planDePagos = cuota1 and cuota2 and cuota3;

planDePagos
